<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MovieA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="268dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_poster_movie"
                        android:layout_width="142dp"
                        android:layout_height="198dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="14dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_titulo_movie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="15dp"
                            android:autoSizeMaxTextSize="36sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:lineSpacingExtra="8sp"
                            android:maxLines="3"
                            android:singleLine="false"
                            android:text="Titulo"
                            android:textAlignment="center"
                            android:textStyle="bold|italic"
                            android:typeface="normal" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:text="Director:"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:id="@+id/txt_director_movie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/textView2"
                                app:layout_constraintTop_toTopOf="@id/textView2"
                                android:layout_marginLeft="10dp"
                                android:text="TextView"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="15dp"
                                app:layout_constraintTop_toBottomOf="@id/textView2"
                                android:text="Año:"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:id="@+id/txt_anio_movie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/textView3"
                                app:layout_constraintTop_toTopOf="@id/textView3"
                                android:layout_marginLeft="10dp"
                                android:text="123"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="15dp"
                                app:layout_constraintTop_toBottomOf="@id/textView3"
                                android:text="Valoración:"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:id="@+id/txt_valoracion_movie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/textView6"
                                app:layout_constraintTop_toTopOf="@id/textView6"
                                android:layout_marginLeft="10dp"
                                android:text="2134"
                                tools:layout_editor_absoluteX="20dp"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <ToggleButton
                android:id="@+id/tBtnViewMovie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="60dp"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/tBtnLikeMovie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textOff=""
                android:textOn="" />

            <ImageButton
                android:id="@+id/tBtnAddList"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="60dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="379dp">

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="297dp"
                android:layout_height="332dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:text="TextView"
                android:textAlignment="center" />

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>