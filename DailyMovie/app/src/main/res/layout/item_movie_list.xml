<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/rounded_button"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/img_posterMovie"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/image_rounded_border"
        android:clipToOutline="true"
        tools:src="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/txt_titleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_posterMovie"
        android:layout_toRightOf="@id/img_posterMovie"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Title"
        android:textSize="20sp"
        android:fontFamily="@font/courier_bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_yearMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_titleMovie"
        android:layout_toEndOf="@id/img_posterMovie"
        android:layout_toRightOf="@id/img_posterMovie"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="0000-00-00"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_voteAverageMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_yearMovie"
        android:layout_toEndOf="@id/img_posterMovie"
        android:layout_toRightOf="@id/img_posterMovie"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Rating: 0.0"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />

</RelativeLayout>
