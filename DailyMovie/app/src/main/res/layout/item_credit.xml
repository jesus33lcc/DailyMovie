<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/container_rounded_border"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/imgCastProfile"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Cast Profile"
        android:fontFamily="@font/courier_bold"
        android:background="@drawable/image_rounded_border"
        android:clipToOutline="true"/>

    <TextView
        android:id="@+id/txtCastName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:text="Cast Name"
        android:fontFamily="@font/courier_bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtCharacterName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:text="Character Name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>
