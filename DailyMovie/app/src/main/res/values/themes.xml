<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DailyMovie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/courier</item>

    </style>
    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="itemTextAppearanceActive">@style/BottomNavViewItemStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavViewItemStyle</item>
    </style>
    <style name="Theme.DailyMovie" parent="Base.Theme.DailyMovie" />
    <style name="BottomNavViewItemStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>